{
  "connection": {
    "db": "iptv",
    "port": 3306,
    "host": "localhost",
    "user": "root",
    "password": ""
  },

  "tables": {
    "sources": {
      "id": "KEY",
      "url": ["TEXT"],
      "last_online": ["DATE"],
      "count": ["SMALLINT", "DEFAULT 0"]
    },

    "themes": {
      "id": "KEY",
      "name": ["VARCHAR(30)", "NOT NULL", "UNIQUE"]
    },

    "channels": {
      "id": "KEY",
      "name": ["VARCHAR(50)", "NOT NULL", "UNIQUE"],
      "theme": ["INT"],
      "urls": ["TEXT"],
      "online": ["TINYINT", "UNSIGNED", "DEFAULT 0", "NOT NULL"],
      "source_id": ["TINYINT", "UNSIGNED"],
      "FOREIGN KEY": ["theme", "themes(id)"]
    },

    "users": {
      "id": "KEY",
      "login": ["VARCHAR(30)", "NOT NULL", "UNIQUE"],
      "email": ["VARCHAR(50)", "NOT NULL", "DEFAULT 'UNCONFIRMED'", "UNIQUE"],
      "password": ["VARCHAR(32)", "NOT NULL"],
      "reg_date": ["DATE"]
    },

    "playlists": {
      "id": "KEY",
      "quality": ["SMALLINT", "NOT NULL", "DEFAULT 0"],
      "channels": ["TEXT"],
      "del_channels": ["BOOLEAN", "NOT NULL", "DEFAULT false"]
    },

    "tokens": {
      "id": "KEY",
      "value": ["VARCHAR(32)", "NOT NULL"],
      "email": ["VARCHAR(64)", "NOT NULL", "UNIQUE"],
      "user": "FOREIGN KEY",
      "date": ["DATE"],
      "FOREIGN KEY": ["user", "users(id)"]
    },

    "tasks": {
      "id": "KEY",
      "last_execution": ["DATE", "NOT NULL"],
      "crashed": ["TEXT"]
    }
  }
}